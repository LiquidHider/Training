@model SalesInvoice

<div class="form-location">
    <div></div>
    <form method="post" asp-controller="SalesInvoice" asp-action="Add" enctype="multipart/form-data">
        <input asp-for="Id" value="0" hidden />
        <div class="align-content-center" style="display: flex; justify-content: center;">
            <div class="col-10">
                <div class="border p-3 mt-4 row">
                    <div class="col-12 pb-2">
                        <h3 class="text-primary">Додавання Видаткової Накладної на товар: @Model.Sell.Good.Name</h3>
                        <hr />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Сount"></label>
                        <input asp-for="Сount" disabled class="form-control" />
                        <span asp-validation-for="Сount" class="text-danger"></span>
                    </div>
                     <div class="mb-3">
                        <label>Ціна за шт.</label>
                        <input asp-for="@Model.Sell.Price" class="form-control" />
                    </div>
                    <input hidden asp-for="Sell" name="sellClass" value="@Json.Serialize(Model.Sell)"> </input>
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary" style="width:150px">Створити</button>
                        <a asp-controller="Good" asp-action="Index" class="btn btn-danger" style="width:150px">Скасувати</a>
                    </div>
                </div>
            </div>
        </div>
    </form><div></div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}