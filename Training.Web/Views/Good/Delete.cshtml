@model Good
@{
    ViewData["Title"] = "Видалення товару: " + Model.Name;
}

    <div class="form-location">
    <div></div>
    <form method="post" asp-controller="Good" asp-action="Delete">
        <input asp-for="Id" hidden />
        <div class="align-content-center" style="display: flex; justify-content: center;">
            <div class="col-10">
                <div class="border p-3 mt-4 row">
                    <div class="col-12 pb-2">
                        <h3 class="text-primary">Видалення Товару</h3>
                        <hr />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" disabled class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="AppraisedValue"></label>
                        <input asp-for="AppraisedValue" disabled class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Category"></label>
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>

                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary" style="width:150px">Видалити</button>
                        <a asp-controller="Good" asp-action="Index" class="btn btn-danger" style="width:150px">Скасувати</a>
                    </div>
                </div>
            </div>
        </div>
    </form><div></div>
</div>