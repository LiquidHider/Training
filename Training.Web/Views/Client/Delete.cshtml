@model Client

<form method="post" asp-action="Delete">
  <input asp-for="Id" hidden />
  
  <div class="row">
    <div class="col-10">
      <div class="border p-3 mt-4 row">
        <div class="col-12 pb-2">
            <h2 class="text-primary">Delete Client Info</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PassportSerial"></label>
            <input asp-for="PassportSerial" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PassportNumber"></label>
            <input asp-for="PassportNumber" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" disabled class="form-control" />
        </div>
        
        <div class="col-12">
            <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
                    <a asp-controller="Client" asp-action="Index" class="btn btn-secondary" style="width:150px">Відміна</a>
        </div>
     </div>
    </div> 
   </div>
</form>
