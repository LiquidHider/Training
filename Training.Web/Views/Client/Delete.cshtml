@model Client
@{
    ViewData["Title"] = "Видалення клієнта " + Model.FullName;
}
<div class="form-location"><div></div>
<form method="post" asp-action="Delete">
  <input asp-for="Id" hidden />
  <div class="align-content-center" style="display: flex; justify-content: center;">
    <div class="col-10">
      <div class="border p-3 mt-4 row">
        <div class="col-12 pb-2">
            <h3 class="text-primary">Видалення Клієнта</h3>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PassportSerial"></label>
            <input asp-for="PassportSerial" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PassportNumber"></label>
            <input asp-for="PassportNumber" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" disabled class="form-control" />
        </div>
        
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary" style="width:150px">Видалити</button>
            <a asp-controller="Client" asp-action="Index" class="btn btn-danger" style="width:150px">Скасувати</a>
        </div>
     </div>
    </div> 
   </div>
</form><div></div></div>
