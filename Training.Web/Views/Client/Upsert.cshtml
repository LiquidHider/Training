@model Client
<div class="form-location"><div></div>
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
  <input asp-for="Id" hidden />
  <div class="align-content-center" style="display: flex; justify-content: center;">
    <div class="col-10">
      <div class="border p-3 mt-4 row">
        <div class="col-12 pb-2">
          <h3 class="text-primary">@(Model.Id!=0?"Редагування": "Додавання") Клієнта</h3>
          <hr />
        </div>
        <div class="mb-3">
          <label asp-for="FullName"></label>
          <input asp-for="FullName" class="form-control" />
          <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <label asp-for="PassportSerial"></label>
          <input asp-for="PassportSerial" class="form-control" />
          <span asp-validation-for="PassportSerial" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <label asp-for="PassportNumber"></label>
          <input asp-for="PassportNumber" class="form-control" />
          <span asp-validation-for="PassportNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
          <label asp-for="PhoneNumber"></label>
          <input asp-for="PhoneNumber" class="form-control" />
          <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-12 text-center">
          @if (Model.Id != 0)
          {
            <button type="submit" class="btn btn-primary" style="width:150px">Редагувати</button>
          }
          else
          {
            <button type="submit" class="btn btn-primary" style="width:150px">Створити</button>
          }
          <a asp-controller="Client" asp-action="Index" class="btn btn-danger" style="width:150px">Скасувати</a>
        </div>
      </div>
    </div> 
  </div>
</form><div></div></div>

@section Scripts{
  @{
        <partial name="_ValidationScriptsPartial" />
  }
}