@model IEnumerable<Client>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black text-primary">Наявні Клієнти</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Client" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-clipboard2-plus"></i> &nbsp; Додати нового клієнта
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr class="table-primary">
                <th>П.І.Б</th>
                <th>Серія Паспорту</th>
                <th>Номер Паспорту</th>
                <th>Номер Телефону</th>
                <th></th>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="40%">@obj.FullName</td>
                    <td width="15%">@obj.PassportSerial</td>
                    <td width="15%">@obj.PassportNumber</td>
                    <td width="20%">@obj.PhoneNumber</td>
                    <td width="10%">
                        <div class="btn-qroup text-center" role="group">
                            <a asp-controller="Client" asp-action="Upsert" asp-route-id="@obj.Id"><i class="bi bi-pencil"></i></a>
                            &nbsp;
                            <a asp-controller="Client" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
