@model Category
@{
    ViewData["Title"] = "Редагувати категорію";
}
<div class="form-location">
    <div></div>
    <form method="post" asp-controller="Category" asp-action="Upsert" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <div class="align-content-center" style="display: flex; justify-content: center;">
            <div class="col-10">
                <div class="border p-3 mt-4 row">
                    <div class="col-12 pb-2">
                        <h3 class="text-primary">@(Model.Id != 0 ? "Редагування" : "Додавання") Категорії</h3>
                        <hr />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Commision"></label>
                        <input asp-for="Commision" class="form-control" />
                        <span asp-validation-for="Commision" class="text-danger"></span>
                    </div>
                    <div class="col-12 text-center">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary" style="width:150px">Редагувати</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary" style="width:150px">Створити</button>
                        }
                        <a asp-controller="Good" asp-action="Index" class="btn btn-danger" style="width:150px">Скасувати</a>
                    </div>
                </div>
            </div>
        </div>
    </form><div></div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}